---
import BaseLayout from "./BaseLayout.astro";
import GuidanceSidebar from "@/components/guidance/GuidanceSidebar.astro";
const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div style="display:grid; grid-template-columns: 200px 1fr 250px; gap:2rem;">
    <aside>
      <GuidanceSidebar />
    </aside>

    <main>
      <slot />
    </main>

    <aside>
      <!-- Reserved for overlays & frameworks -->
      <p><em>Context panel (coming later)</em></p>
    </aside>
  </div>
</BaseLayout>
